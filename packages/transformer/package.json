{
  "name": "@syncflow/transformer",
  "version": "1.0.0",
  "description": "Transformation utilities for Tiptap and ProseMirror with Yjs support",
  "homepage": "https://github.com/syncflow",
  "keywords": [
    "tiptap",
    "prosemirror",
    "transformer",
    "yjs",
    "collaboration"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/transformer.cjs",
  "module": "dist/transformer.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/transformer.esm.js",
      "require": "./dist/transformer.cjs"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@syncflow/alert": "workspace:*",
    "@syncflow/bilibili": "workspace:*",
    "@tiptap/starter-kit": "^3.18.0"
  },
  "peerDependencies": {
    "@tiptap/core": "^3.4.2",
    "@tiptap/pm": "^3.18.0",
    "y-prosemirror": "^1.3.7",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@tiptap/pm": "^3.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/syncflow"
  }
}
