{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@syncflow/alert": ["../../packages/alert/src/index.ts"],
      "@syncflow/alert/*": ["../../packages/alert/src/*"],
      "@syncflow/transformer": ["../../packages/transformer/src/index.ts"],
      "@syncflow/transformer/*": ["../../packages/transformer/src/*"],
      "@syncflow/bilibili": ["../../packages/bilibili/src/index.ts"],
      "@syncflow/bilibili/*": ["../../packages/bilibili/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "dist/types/**/*.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "tests", ".next", "dist"]
}
