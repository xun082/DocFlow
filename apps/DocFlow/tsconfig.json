{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@syncflow/alert": ["../../packages/alert/dist/index.d.ts"],
      "@syncflow/alert/*": ["../../packages/alert/dist/*"],
      "@syncflow/transformer": ["../../packages/transformer/dist/index.d.ts"],
      "@syncflow/transformer/*": ["../../packages/transformer/dist/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "dist/types/**/*.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "tests", ".next", "dist"]
}
